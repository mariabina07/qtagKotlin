<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qtag.bina.binaqtag.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/title_category"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="Questions Tag"
        app:layout_constraintBottom_toTopOf="@+id/friends"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/friends"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/qtaglogo"
        app:layout_constraintEnd_toEndOf="@+id/title_category"
        app:layout_constraintStart_toStartOf="@+id/title_category"
        app:layout_constraintTop_toBottomOf="@+id/title_category" />


    <TextView
        android:id="@+id/question_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is the question : \n"
        app:layout_constraintEnd_toEndOf="@+id/friends"
        app:layout_constraintStart_toStartOf="@+id/friends"
        app:layout_constraintTop_toBottomOf="@+id/friends" />

    <TextView
        android:id="@+id/question_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="@+id/question_mark"
        app:layout_constraintStart_toStartOf="@+id/question_mark"
        app:layout_constraintTop_toBottomOf="@+id/question_mark" />


</android.support.constraint.ConstraintLayout>
